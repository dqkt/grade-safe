<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_regular">

        <RelativeLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3">

            <TextView
                android:gravity="center_vertical"
                android:layout_toStartOf="@id/layout_year_options"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/textview_name"/>

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:alpha="0"
                android:visibility="gone"
                android:id="@+id/layout_year_options">

                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/circle_selector"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="6dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle_primary"
                    android:elevation="2dp"
                    android:id="@+id/button_edit_year">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/edit_year"
                        android:tint="@android:color/white"/>
                </RelativeLayout>

                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/circle_selector"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="6dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle_primary"
                    android:elevation="2dp"
                    android:id="@+id/button_delete_year">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_delete"
                        android:contentDescription="@string/remove_term_description"
                        android:tint="@android:color/white"/>
                </RelativeLayout>

                <RelativeLayout
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/circle_selector"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="6dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/circle_accent"
                    android:elevation="2dp"
                    android:id="@+id/button_add_term">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar_plus"
                        android:contentDescription="@string/add_term_description"
                        android:tint="@android:color/white"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/year_options_info"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:id="@+id/textview_no_terms"/>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:id="@+id/recyclerview_terms"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>